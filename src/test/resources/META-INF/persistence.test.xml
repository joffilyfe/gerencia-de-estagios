<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="estagiarios" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
                <class>br.edu.ifpb.projeto.model.Aluno</class>
                <class>br.edu.ifpb.projeto.model.Usuario</class>
                <class>br.edu.ifpb.projeto.model.Empresa</class>
                <class>br.edu.ifpb.projeto.model.Vaga</class>
                <exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbc.JDBCDriver" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:mymemdb" />
			<property name="hibernate.showSql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
